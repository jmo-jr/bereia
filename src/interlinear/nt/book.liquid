---
pagination:
  data: ntChapterPages
  size: 1
  alias: entry
permalink: "interlinear/{{ entry.bookSlug }}/{{ entry.chapter.number }}/index.html"
layout: "page.liquid"
bee: true
eleventyComputed:
  bookName: "{{ entry.bookName }}"
  bookNameAbbr: "{{ entry.bookSlug }}"
  bookChapter: "{{ entry.chapter.number }}"
---
{% assign chapter = entry.chapter %}
{% render '../../_includes/bookNav', bookName: bookName, bookChapter: chapter.number, bookAbbr: bookNameAbbr %}

{% render '../../_includes/sideNav', theBookName: bookNameAbbr, theBookChapter: chapter.number %}

	<div class="chapter-wrapper">
		<h1 class="vheading">{{ entry.bookHeading }} {{ chapter.number }}</h1>

		{% assign pericopes = chapter.pericopes %}
		{% if pericopes and pericopes.size > 0 %}
			{% for pericope in pericopes %}
				<section class="pericope" id="{{ pericope.id | default: '' | downcase }}">
					{% if pericope.title or pericope.start_verse or pericope.end_verse %}
						<h2 class="pericope-title">{{ pericope.title }}</h2>
					{% endif %}

					<ul class="versiculos">
						{% for verse in pericope.verses %}
							<li id="v{{ verse.number }}">
								<strong class="refmain" style="margin-top: 65px">{{ verse.number }}</strong>
								<div class="interlinear">
									{% for token in verse.tokens %}
										<span class="token">
											<a class="strongs" href="https://bibleapps-com.translate.goog/strongs/greek/{{ token.strongs | strip }}.htm?_x_tr_sl=en&_x_tr_tl=pt&_x_tr_hl=pt-BR&_x_tr_pto=wapp" target="_blank" title="{{ token.verbete }}">{{ token.strongs }}</a>
											<span class="translit">{{ token.transliteracao }}</span>
											<span class="greek" title="{{ token.traducao }} -- OcorrÃªncias: {{ token.ocorrencias }}">{{ token.lemma }}</span>
											<span class="translate">{{ token.pt }}</span>
											<small class="refs" title="{{ token.morfologia }}">{{ token.abrev_morf }}</small>
										</span>
									{% endfor %}
								</div>
							</li>
						{% endfor %}
					</ul>
				</section>
			{% endfor %}
		{% else %}
			<ul class="versiculos">
				{% for verse in chapter.verses %}
					<li id="v{{ verse.number }}">
						<strong class="refmain">{{ verse.number }}</strong>
						<div class="interlinear">
							{% for token in verse.tokens %}
								<span class="token">
									<a class="strongs" hreh="#" title="{{ token.verbete }}:">{{ token.strongs }}</a>
									<span class="translit" title="{{ token.ocorrencia }}">{{ token.transliteracao }}</span>
									<span class="greek">{{ token.lemma }}</span>
									<span class="translate">{{ token.traducao }}</span>
									<small class="refs" title="{{ token.desgram }}">{{ token.morph }}</small>
								</span>
							{% endfor %}
						</div>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</div>
