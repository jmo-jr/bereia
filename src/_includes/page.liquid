---
title: Bíblia BEREIA
---
<!DOCTYPE html>
<html land="pt-br">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
	<base href="{{ pathPrefix }}">
  <meta name="description" content="Página do capítulo do livro escolhido">
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" href="{{ '/img/logo.png' | url }}">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  <style>
    .ui-tooltip {
      padding: 4px 8px;
      background-color: lightyellow;
      font-size: 14px;
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
  <script>
    $( function() {
      $( document ).tooltip();
    } );
  </script>
</head>

<body>

  <div id="app" class="wrapper">

    <header class="app-bar">
			<div class="content d-flex justify-between align-items-center">
				<div class="d-flex align-items-center" style="gap:16px;">
					<img src="{{ '/img/logo.png' | url }}" style="width:34px; height: 34px;">
					<h1><a href="{{ '/' | url }}">Bíblia BEREIA</a></h1>
				</div>

				<nav class="main-nav">
					<ul>
						<li><a href="{{ '/sobre/' | url }}">Info</a></li>
						<li><a href="{{ '/mateus/1/' | url }}">Bíblia de Estudo</a></li>
						<li><a href="{{ '/interlinear/mateus/01/' | url }}">Interlinear</a></li>
					</ul>
				</nav>
			</div>
    </header>

    <div class="toolbar">
      <div class="content">

        <div id="" class="d-flex justify-between">

					{% comment %} Navegador dos livros {% endcomment %}
          <div class="input-group">

            <form>
              <select id="livro" name="livro" class="drop" onchange="location.href = this.value;">
                {% for livro in ntBooks %}
                <option 
                  value="{{ livro.permalink | url | append: '01' }}"
                  {% if bookName == livro.name %}selected{% endif %}
                >{{ livro.name }}</option>
                {% endfor %}
              </select>

              <select name="chapter" class="drop" onchange="location.href = this.value;">

              {% for the_book in ntBooks %}
                {% if the_book.name == bookName %}
                  {% assign num = the_book.chapters %}
                  {% assign range = (1..num) %}
                  {% for n in range %} 
                    {% if n <= 9 %}

                      <option 
                        value="{{ the_book.permalink | url }}0{{ n }}"
                        {% if n == bookChapter %}selected{% endif %}
                      >
                        0{{ n }}
                      </option>

                    {% else %}

                      <option 
                        value="{{ the_book.permalink | url }}{{ n }}"
                        {% if n == bookChapter %}selected{% endif %}
                      >
                        {{ n }}
                      </option>

                    {% endif %}
                  {% endfor %}

                {% endif %}
              {% endfor %}

              </select>

            </form>

          </div>

					{% if type == "be" %}
					<h2>Bíblia de Estudo Exegético</h2>
					{% else %}
					<h2>Interlinear Analítico</h2>
					{% endif %}

					{% comment %} Configurações de tela {% endcomment %}
					{% if type == "be" %}
					<div class="search-field">
						<input type="text">
            <button class="search-icon" type="button" title="Busca">o</button>
					</div>
					{% else %}
          <div class="button-group">
            <button id="strongBt" class="square" type="button" title="Ocultar números Strong" onclick="toggleStrongs()">#</button>
            <button id="translitBt" class="square" type="button" title="Ocultar transliteração" onclick="toggleTranslit()"><em>A</em></button>
            <button id="greekBt" class="square" type="button" title="Ocultar texto grego" onclick="toggleGreek()">&alpha;</button>
            <button id="gramBt" class="square" type="button" title="Ocultar gramática" onclick="toggleGrammar()">{a}</button>
          </div>
					{% endif %}

        </div>

      </div>
    </div>

    <main class="main-content">
      <div class="content">

        {% block content %}
          {{ content }}
        {% endblock %}

      </div>
    </main>

  </div>

  <!-- SCRIPTS -->
  <script>
    var page = document.getElementById("app");

    function toggleStrongs() {
      page.classList.toggle("no_strongs");
    }
    function toggleTranslit() {
      page.classList.toggle("no_translit");
    }
    function toggleGreek() {
      page.classList.toggle("no_greek");
    }
    function toggleGrammar() {
      page.classList.toggle("no_grammar");
    }
  </script>

</body>
</html>